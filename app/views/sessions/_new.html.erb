<%= stylesheet_link_tag    "login", media: "all" %>
<div class='poon'>
	<div class="row-fluid">
		<div class="col-md-4 well center">

			<!-- form_tag instead of form for because there is no specific resource we are creating -->

			<%= form_tag sessions_path, :html => {:class => "form-horizontal"} do %>

				<legend>Log In</legend>

				<div class="control-group">	

					<%= label_tag :email %><br />

					<div class="controls">
						<%= text_field_tag :email, params[:email], :class => "form-control" %>
					</div>

				</div>

				<div class="control-group">	

			    	<%= label_tag :password %><br />

			    	<div class="controls">
			    		<%= password_field_tag :password, params[:password], :class => "form-control" %>
		    		</div>

			  	</div>
			  	
			  	<div class="form-actions sub">
			  		<%= submit_tag "Log in", :class => "btn btn-primary" %>
		  		</div>
			  
			<% end %>

		</div>
	</div>

	<div class="row-fluid">
	 <div class="col-md-4 well center" style="position:absolute; top:450px; margin-left: auto; margin-right: auto; left: 0; right: 0;">
		<h3>Login Info</h3>
		<ul>
			<li>Super Manager = (:email => 'super_manager@demo.com', :password => 'password')</li>
			<li>Manager = (:email => 'manager@demo.com', :password => 'password')</li>
			<li>Staffer = (:email => 'staffer@demo.com', :password => 'password')</li>
		</ul>
	</div>
</div>
</div>

